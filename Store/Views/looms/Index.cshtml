@model IEnumerable<Store.Models.loom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sugu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tervis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.viilatüüp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.iseloomu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vanus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sugu.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tervis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.viilatüüp.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.iseloomu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vanus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
